{
  "name": "simple-staking",
  "version": "1.0.9",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npx --node-options=--max-old-space-size=8192 tsc -b && npx --node-options=--max-old-space-size=8192 vite build",
    "lint": "eslint",
    "preview": "vite preview",
    "build:e2e": "npx --node-options=--max-old-space-size=8192 vite build --mode test",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "clean": "rm -r node_modules",
    "build-docker": "docker build -t babylonlabs/simple-staking -f docker/Dockerfile .",
    "clean-docker": "docker rmi babylonlabs/simple-staking 2>/dev/null; true",
    "prepare": "husky",
    "sort-imports": "eslint --fix .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test e2e/specs/",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "visualizer": "npx vite-bundle-visualizer",
    "gen:api": "npx swagger-typescript-api generate -p https://staking-api.babylonlabs.io/swagger/doc.json -o ./src/shared/utils/swagger -t ./src/shared/utils/swagger/templates -n api.ts --unwrap-response-data --disable-format --silent"
  },
  "engines": {
    "node": "24.2.0"
  },
  "dependencies": {
    "@babylonlabs-io/babylon-proto-ts": "1.0.1",
    "@babylonlabs-io/btc-staking-ts": "2.3.0",
    "@babylonlabs-io/core-ui": "1.1.1",
    "@babylonlabs-io/wallet-connector": "1.7.6",
    "@bitcoin-js/tiny-secp256k1-asmjs": "2.2.3",
    "@cosmjs/proto-signing": "^0.32.4",
    "@cosmjs/stargate": "^0.32.4",
    "@mempool/mempool.js": "^3.0.0",
    "@sentry/react": "^8.30.0",
    "@tanstack/react-query": "^5.28.14",
    "@uidotdev/usehooks": "^2.4.1",
    "awilix": "^12.0.5",
    "bitcoinjs-lib": "6.1.5",
    "core-js": "^3.41.0",
    "date-fns": "^3.6.0",
    "decimal.js-light": "^2.5.1",
    "idb": "^8.0.3",
    "nanoevents": "^9.1.0",
    "next-themes": "^0.3.0",
    "qs": "^6.13.1",
    "react": "^18",
    "react-dom": "^18",
    "react-error-boundary": "^6.0.0",
    "react-icons": "^5.1.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-toastify": "^10.0.6",
    "react-tooltip": "^5.26.4",
    "sharp": "^0.33.4",
    "tailwind-merge": "^2.5.2",
    "url-safe-base64": "^1.3.0",
    "usehooks-ts": "^3.0.2",
    "uuid": "^11.1.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.27.0",
    "@playwright/test": "^1.46.0",
    "@sentry/vite-plugin": "^2.22.6",
    "@tanstack/eslint-plugin-query": "^5.74.7",
    "@tanstack/react-query-devtools": "^5.28.14",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/qs": "^6.9.17",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.0.1",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "ecpair": "^2.1.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import-x": "^4.15.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-babel": "^1.0.1",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "msw": "^1.2.1",
    "postcss": "^8",
    "postcss-import": "^16.1.0",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "source-map-loader": "^5.0.0",
    "swagger-typescript-api": "^13.1.1",
    "tailwindcss": "3.4.3",
    "text-encoding": "^0.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "overrides": {
    "whatwg-url@11.0.0": {
      "tr46": "4.0.0"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{js,jsx,ts,tsx,json,css,scss,md,yml,yaml}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
